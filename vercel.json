{
  "version": 2,
  "builds": [
    {
      "src": "pharmacy/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_collected"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles_collected/$1"
    },
    {
      "src": "/(.*)",
      "dest": "pharmacy/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "pharmacy.settings"
  }
}
